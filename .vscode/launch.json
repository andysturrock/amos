{
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "sourceMaps": true,
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
  {
    "name": "Attach to Chrome",
    "port": 9222,
    "request": "attach",
    "type": "chrome",
    "webRoot": "${workspaceFolder}/web"
  }
  ]
}